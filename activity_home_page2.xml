<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#8bacff"
    tools:context="com.example.devika.innovationtraining.HomePage2">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView android:id="@+id/fullscreen_content" android:layout_width="match_parent"
        android:layout_height="match_parent" android:keepScreenOn="true" android:textColor="#33b5e5"
        android:textStyle="bold" android:textSize="50sp" android:gravity="center" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:touchscreenBlocksFocus="false"
        android:id="@+id"
        android:visibility="visible">

        <LinearLayout android:id="@+id/fullscreen_content_controls" style="?metaButtonBarStyle"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay" android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button android:id="@+id/dummy_button" style="?metaButtonBarButtonStyle"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="0.43" android:text="next"
                android:longClickable="false"
                android:enabled="false"
                android:clickable="true"
                android:backgroundTint="#0072bc" />

        </LinearLayout>

        <TextView
            android:layout_width="493dp"
            android:layout_height="wrap_content"
            android:text="InnovationTraining:"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal|top"
            android:textSize="40dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="80dp" />

        <TextView
            android:layout_width="493dp"
            android:layout_height="wrap_content"
            android:text="10 Ideas a Day"
            android:id="@+id/textView5"
            android:layout_gravity="center"
            android:textSize="40dp"
            android:layout_marginTop="-35dp"
            android:layout_marginLeft="110dp" />


        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:layout_marginRight="-200dp">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radiogroup">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Home_Page2_Options"
                android:id="@+id/radioButton"
                android:layout_gravity="center"
                android:layout_marginBottom="0dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton2"
                    android:layout_gravity="center" />

        </RadioGroup>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_alignBottom="@+id/radiogroup"
            android:layout_toRightof="@+id/radiogroup"
            android:text="Your Own Topic..."
            android:editable="true"
            android:enabled="true" />
        </RelativeLayout>

    </FrameLayout>

</FrameLayout>
