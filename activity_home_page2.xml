<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#8bacff"
    tools:context="com.example.devika.innovationtraining.HomePage2"
    >


    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="519dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="75dp"
        android:id="@+id/LinearLayout1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:layout_marginTop="75dp">

            <ImageView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/imageView"
                android:src="@drawable/logogreen"
                android:layout_gravity="center_horizontal"
                android:background="#ffffff" />

            <LinearLayout android:id="@+id/fullscreen_content_controls" style="?metaButtonBarStyle"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@color/black_overlay" android:orientation="horizontal"
                tools:ignore="UselessParent">

                <Button android:id="@+id/dummy_button2" style="?metaButtonBarButtonStyle"
                    android:layout_width="0dp" android:layout_height="wrap_content"
                    android:layout_weight="0.43" android:text="next"
                    android:longClickable="false"
                    android:enabled="false"
                    android:clickable="true"
                    android:backgroundTint="#0072bc" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="InnovationTraining:"
            android:id="@+id/textView3"
            android:textSize="40sp"
            android:gravity="center"
            android:textColor="#073763"
            android:layout_marginTop="50dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10 Ideas a Day"
            android:id="@+id/textView5"
            android:textSize="40sp"
            android:gravity="center"
            android:textColor="#073763"
            android:visibility="visible" />

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radiogroup"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:gravity="center|top">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Home_Page2_Options"
                android:id="@+id/radioButton"
                android:textSize="30sp"
                android:textColor="#073763" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton2"
                    android:layout_marginBottom="-33dp"
                    android:textColor="#073763"
                    android:layout_marginLeft="-100dp" />

        </RadioGroup>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:text="Your Own Topic..."
                android:editable="true"
                android:enabled="true"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="53dp"
                android:layout_alignBottom="@+id/radiogroup"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="25dp"
                android:textColor="#073763" />
        </RelativeLayout>

    </LinearLayout>

    <Button android:id="@+id/dummy_button"
        android:layout_width="match_parent" android:layout_height="45dp"
        android:text="Next"
        android:longClickable="false"
        android:enabled="false"
        android:clickable="true"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#0072bc"
        android:visibility="visible"
        android:layout_gravity="bottom"
        android:typeface="normal" />

</FrameLayout>
