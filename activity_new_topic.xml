<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7fc241"
    tools:context="com.example.devika.innovationtraining.NewTopic">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="false"
        android:textColor="#33b5e5"
        android:textStyle="bold"
        android:textSize="50sp"
        android:gravity="center"
        android:visibility="visible" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/topicNext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Next"
                android:background="#0072bc"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="normal"
                android:enabled="true"
                android:visibility="visible"
                android:layout_gravity="bottom"
                android:clickable="true"
                android:focusable="false" />

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:rowCount="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Topic:"
                android:id="@+id/textView99"
                android:layout_row="0"
                android:layout_column="16"
                android:textSize="45sp"
                android:layout_gravity="center_horizontal|top"
                android:textColor="#073763"
                android:layout_marginTop="30dp"
                android:visibility="visible" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:id="@+id/editText2"
                android:layout_row="1"
                android:text="Topic here"
                android:background="#9fc5f8"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal|fill_vertical"
                android:layout_marginTop="20dp"
                android:enabled="false"
                android:visibility="visible"
                android:layout_column="16"
                android:layout_marginBottom="30dp"
                android:editable="false"
                android:focusable="false"
                android:textColor="#ffffff" />

            <ScrollView
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:id="@+id/scrollView3"
                android:layout_row="2"
                android:layout_column="16"
                android:layout_gravity="center_horizontal|fill_vertical"
                android:layout_marginTop="0dp"
                android:visibility="visible">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:measureWithLargestChild="false">

                    <TableRow android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_column="1"
                            android:text="1."
                            android:padding="3dip"
                            android:textColor="#004c98" />


                        <EditText
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/idea1text"
                            android:background="#ffffff"
                            android:textColor="#7B888C" />

                    </TableRow>

                    <TableRow android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_column="1"
                            android:text="2."
                            android:padding="3dip"
                            android:textColor="#004c98" />


                        <EditText
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/idea2text"
                            android:background="#ffffff"
                            android:textColor="#7B888C" />

                    </TableRow>

                    <TableRow android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_column="1"
                            android:text="3."
                            android:padding="3dip"
                            android:textColor="#004c98" />


                        <EditText
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/idea3text"
                            android:background="#ffffff"
                            android:textColor="#7B888C" />

                    </TableRow>

                    <TableRow android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_column="1"
                            android:text="4."
                            android:padding="3dip"
                            android:textColor="#004c98" />


                        <EditText
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/idea4text"
                            android:background="#ffffff"
                            android:textColor="#7B888C" />

                    </TableRow>

                    <TableRow android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_column="1"
                            android:text="5."
                            android:padding="3dip"
                            android:textColor="#004c98" />


                        <EditText
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/idea5text"
                            android:background="#ffffff"
                            android:textColor="#7B888C" />

                    </TableRow>

                    <TableRow android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_column="1"
                            android:text="6."
                            android:padding="3dip"
                            android:textColor="#004c98" />


                        <EditText
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/idea6text"
                            android:background="#ffffff" />

                    </TableRow>

                    <TableRow android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_column="1"
                            android:text="7."
                            android:padding="3dip"
                            android:textColor="#7B888C" />


                        <EditText
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/idea7text"
                            android:background="#ffffff"
                            android:textColor="#7B888C" />

                    </TableRow>

                    <TableRow android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_column="1"
                            android:text="8."
                            android:padding="3dip"
                            android:textColor="#004c98" />


                        <EditText
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/idea8text"
                            android:background="#ffffff" />

                    </TableRow>

                    <TableRow android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_column="1"
                            android:text="9."
                            android:padding="3dip"
                            android:textColor="#004c98" />


                        <EditText
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/idea9text"
                            android:background="#ffffff" />

                    </TableRow>

                    <TableRow android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_column="1"
                            android:text="10."
                            android:padding="3dip"
                            android:textColor="#004c98" />


                        <EditText
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/idea10text"
                            android:background="#ffffff" />

                    </TableRow>


                </TableLayout>
            </ScrollView>

        </GridLayout>
    </FrameLayout>

</FrameLayout>
